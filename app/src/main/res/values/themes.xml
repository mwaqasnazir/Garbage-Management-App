<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GMA" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/toobar_color</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/vivid_200</item>
        <item name="colorSecondaryVariant">@color/vivid_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.GMA.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GMA.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GMA.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="CustomUI" parent="FirebaseUI">
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryDark">@color/green_700</item>

<!--        hyperlinkText-->
        <item name="colorAccent">@color/green_700</item>
        <item name="colorButtonNormal">#FFC107</item>

<!--        editText Control-->
        <item name="colorControlNormal">@android:color/black</item>

<!--        for loading on clicking & activated textfeild-->
        <item name="colorControlActivated">@android:color/black</item>

<!--        button RippleEffect-->
        <item name="colorControlHighlight">@android:color/white</item>

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>

        <item name="android:textColorSecondary">@android:color/white</item>
<!--        <item name="android:windowBackground">@mipmap/bg_login</item>-->
        <item name="android:textColorHint">@android:color/white</item>
    </style>
    <style name="FirebaseUI.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="FirebaseUI.Text.Link">
        <item name="android:textColor">@color/toobar_color</item>
    </style>



</resources>